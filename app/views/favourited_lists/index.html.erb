<h1>Favourited Lists</h1>
<hr />
<% @favourited_lists_with_items.each do |list| %>
  <h2><%= list[:title] %></h2>
  <ul>
    <% list[:items].each do |item| %>
      <li><%= item[:name]%>: <%= item[:quantity] %></li>
    <% end %>
  </ul>
  <%= button_to 'Remove from favourites',
                {:controller => :favourited_lists,
                 :action => 'destroy',
                 :id => list[:favourited_list_id] },
                method: :delete %>
  <hr />
<% end %>